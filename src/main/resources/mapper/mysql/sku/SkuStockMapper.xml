<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="test.dao.SkuStockMapper" >
  <resultMap id="BaseResultMap" type="com.fenghua.auto.sku.domain.SkuStock" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="stock_count" property="stockCount" jdbcType="INTEGER" />
    <result column="stock_availability" property="stockAvailability" jdbcType="INTEGER" />
    <result column="repertory_id" property="repertoryId" jdbcType="BIGINT" />
    <result column="sku_id" property="skuId" jdbcType="BIGINT" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, stock_count, stock_availability, repertory_id, sku_id
  </sql>
  
  <select id="select" resultMap="BaseResultMap" parameterType="com.fenghua.auto.sku.domain.SkuStock" >
    select 
    <include refid="Base_Column_List" />
    from sku_stock
    where id = #{id,jdbcType=BIGINT}
  </select>
  
   <select id="selectCount" resultType="java.lang.Integer" parameterType="com.fenghua.auto.sku.domain.SkuStock" >
    select  count(1)
    from sku_stock
    where 1=1
     <if test="skuId != null" >
        and skuId=#{skuId,jdbcType=BIGINT}
    </if>
    <if test="id != null" >
       and id = #{id,jdbcType=BIGINT}
    </if>
  </select>
 
</mapper>